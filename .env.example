# OurChat Environment Configuration
# Copy this file to .env and update values for your deployment

# REQUIRED: Generate a secure secret key (minimum 32 characters)
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secure-secret-key-here-minimum-32-characters-long

# Environment mode (development or production)
FLASK_ENV=production

# Database configuration
# For production, consider using PostgreSQL instead of SQLite
DATABASE_URL=sqlite:///ourchat.db
# Example PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/ourchat

# Server configuration (for production)
PORT=5000

# File upload limits (in bytes)
MAX_CONTENT_LENGTH=52428800

# Security settings
HTTPS_ONLY=true
SECURE_COOKIES=true

# Admin user configuration
ADMIN_EMAIL=admin@ourchat.org

# Optional: Custom domain for SEO
DOMAIN=ourchat.strangled.net
